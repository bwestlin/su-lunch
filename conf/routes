# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                         controllers.LunchInfo.index
GET        /todaysLunches            controllers.LunchInfo.todaysLunches

# Api
GET        /api/todaysLunches        controllers.LunchInfo.todaysLunchesJson

# Javascript reverse routes
GET        /jsroutes                 controllers.LunchInfo.jsRoutes

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file             controllers.Assets.at(path="/public", file)

# WebJars assets
GET        /webjars/*file            controllers.WebJarAssets.at(file)